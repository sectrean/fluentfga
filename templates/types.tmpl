{{ template "_header" . }}

type Type interface {
    typeName() string
}

{{ range .Types }}

// {{ .Type }}Type represents the "{{ .Name }}" type and provides interfaces for its relations.
type {{ .Type }}Type struct {
    model *AuthorizationModel
}

func ({{ .Type }}Type) typeName() string { return "{{ .Name }}" }

{{ range .Relations }}
{{ $relType := print .Object.Type .Type }}

{{ if eq (len .UserTypes) 0 }}
// {{ .Type }} provides an interface for the "{{ .Object.Name}}#{{ .Name }}" relation.
func ({{ abbr .Object.Type }} {{ .Object.Type }}Type) {{ .Type }}() IndirectRelation[{{ .Object.Type }}] {
    return IndirectRelation[{{ .Object.Type }}]{
        model: {{ abbr .Object.Type }}.model,
        typ: "{{ .Object.Name }}",
        rel: "{{ .Name }}",
    }
}

{{ else }}
{{ $relUserType := index .UserTypes 0 }}
{{ if gt (len .UserTypes) 1 }}
{{ $relUserType = print .Object.Type .Type "User" }}
{{ end }}

// {{ .Type }} provides an interface for the "{{ .Object.Name}}#{{ .Name }}" relation.
func ({{ abbr .Object.Type }} {{ .Object.Type }}Type) {{ .Type }}() DirectRelation[{{ $relUserType }}, {{ .Object.Type }}] {
    return DirectRelation[{{ $relUserType }}, {{ .Object.Type }}]{
        model: {{ abbr .Object.Type }}.model,
        typ: "{{ .Object.Name }}",
        rel: "{{ .Name }}",
    }
}

