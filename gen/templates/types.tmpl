func ({{ .Type }}) FgaType() string { return "{{ .Name }}" }
func (o {{ .Type }}) Identifier() string { return fmt.Sprint(o.{{ .IDName }}) }
func (o {{ .Type }}) String() string { return fmt.Sprint("{{ .Name }}:", o.{{ .IDName }}) }
func ({{ .Type }}) IsFilterable() { }

